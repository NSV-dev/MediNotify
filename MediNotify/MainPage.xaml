<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodels="clr-namespace:MediNotify.ViewModels"
             x:Class="MediNotify.MainPage"
             Title="MediNotify - Pulse Monitor"
             BackgroundColor="#F5F5F5">

    <ContentPage.BindingContext>
        <viewmodels:PulseViewModel />
    </ContentPage.BindingContext>

    <ScrollView>
        <Grid Padding="20" RowSpacing="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Header -->
            <Grid Grid.Row="0" ColumnSpacing="15">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <VerticalStackLayout Grid.Column="0" Spacing="5">
                    <Label Text="MediNotify" 
                           FontSize="28" 
                           FontAttributes="Bold" 
                           TextColor="#2196F3"/>
                    <Label Text="Live Pulse Monitor" 
                           FontSize="16" 
                           TextColor="#666"/>
                </VerticalStackLayout>
                
                <Frame Grid.Column="1" 
                       Padding="10,5" 
                       CornerRadius="15" 
                       BackgroundColor="{Binding IsConnected, Converter={StaticResource BoolToColorConverter}}"
                       HasShadow="True">
                    <Label Text="{Binding ConnectionStatus}" 
                           FontSize="12" 
                           TextColor="White" 
                           HorizontalOptions="Center"/>
                </Frame>
            </Grid>

            <!-- Main Pulse Display -->
            <Frame Grid.Row="1" 
                   Padding="30" 
                   CornerRadius="25" 
                   BackgroundColor="White" 
                   HasShadow="True"
                   Margin="0,10">
                <Grid RowSpacing="15">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Pulse Rate -->
                    <VerticalStackLayout Grid.Row="0" Spacing="5" HorizontalOptions="Center">
                        <Label Text="Current Pulse" 
                               FontSize="16" 
                               TextColor="#666" 
                               HorizontalOptions="Center"/>
                        <Label Text="{Binding CurrentPulse}" 
                               FontSize="72" 
                               FontAttributes="Bold" 
                               TextColor="#E91E63" 
                               HorizontalOptions="Center"/>
                        <Label Text="BPM" 
                               FontSize="18" 
                               TextColor="#666" 
                               HorizontalOptions="Center"/>
                    </VerticalStackLayout>

                    <!-- Quality Indicator -->
                    <Frame Grid.Row="1" 
                           Padding="15,8" 
                           CornerRadius="20" 
                           BackgroundColor="{Binding PulseQualityColor}" 
                           HorizontalOptions="Center">
                        <Label Text="{Binding PulseQualityText}" 
                               FontSize="14" 
                               FontAttributes="Bold" 
                               TextColor="White" 
                               HorizontalOptions="Center"/>
                    </Frame>

                    <!-- Last Update -->
                    <Label Grid.Row="2" 
                           Text="{Binding LastUpdateTime, StringFormat='Last Update: {0}'}" 
                           FontSize="12" 
                           TextColor="#999" 
                           HorizontalOptions="Center"/>
                </Grid>
            </Frame>

            <!-- Device Info -->
            <Frame Grid.Row="2" 
                   Padding="20" 
                   CornerRadius="15" 
                   BackgroundColor="White" 
                   HasShadow="True">
                <Grid ColumnSpacing="15">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    
                    <VerticalStackLayout Grid.Column="0" Spacing="5">
                        <Label Text="Device" 
                               FontSize="14" 
                               TextColor="#666"/>
                        <Label Text="{Binding DeviceName}" 
                               FontSize="16" 
                               FontAttributes="Bold" 
                               TextColor="#333"/>
                    </VerticalStackLayout>
                    
                    <Frame Grid.Column="1" 
                           Padding="10,5" 
                           CornerRadius="12" 
                           BackgroundColor="{Binding PulseStatusColor}">
                        <Label Text="{Binding PulseStatusText}" 
                               FontSize="12" 
                               TextColor="White" 
                               HorizontalOptions="Center"/>
                    </Frame>
                </Grid>
            </Frame>

            <!-- Control Buttons -->
            <Grid Grid.Row="3" ColumnSpacing="10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                
                <Button Grid.Column="0" 
                        Text="Connect" 
                        Command="{Binding ConnectCommand}"
                        IsEnabled="{Binding IsConnected, Converter={StaticResource InverseBoolConverter}}"
                        BackgroundColor="#4CAF50"
                        TextColor="White"
                        CornerRadius="20"
                        FontAttributes="Bold"/>
                
                <Button Grid.Column="1" 
                        Text="Disconnect" 
                        Command="{Binding DisconnectCommand}"
                        IsEnabled="{Binding IsConnected}"
                        BackgroundColor="#FF5722"
                        TextColor="White"
                        CornerRadius="20"
                        FontAttributes="Bold"/>
            </Grid>

            <Grid Grid.Row="4" ColumnSpacing="10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                
                <Button Grid.Column="0" 
                        Text="Start Monitoring" 
                        Command="{Binding StartMonitoringCommand}"
                        IsEnabled="{Binding IsConnected}"
                        BackgroundColor="#2196F3"
                        TextColor="White"
                        CornerRadius="20"
                        FontAttributes="Bold"/>
                
                <Button Grid.Column="1" 
                        Text="Stop Monitoring" 
                        Command="{Binding StopMonitoringCommand}"
                        IsEnabled="{Binding IsMonitoring}"
                        BackgroundColor="#FF9800"
                        TextColor="White"
                        CornerRadius="20"
                        FontAttributes="Bold"/>
            </Grid>

            <!-- Refresh Button -->
            <Button Grid.Row="5" 
                    Text="Refresh" 
                    Command="{Binding RefreshCommand}"
                    IsEnabled="{Binding IsConnected}"
                    BackgroundColor="#9C27B0"
                    TextColor="White"
                    CornerRadius="20"
                    FontAttributes="Bold"/>

            <!-- Error Display -->
            <Frame Grid.Row="6" 
                   IsVisible="{Binding HasError}"
                   Padding="15" 
                   CornerRadius="15" 
                   BackgroundColor="#FFEBEE" 
                   BorderColor="#F44336"
                   HasShadow="True">
                <Label Text="{Binding ErrorMessage}" 
                       FontSize="14" 
                       TextColor="#D32F2F" 
                       HorizontalOptions="Center"/>
            </Frame>
        </Grid>
    </ScrollView>

</ContentPage>
